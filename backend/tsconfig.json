{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "typings/*": ["src/typings/*"],
      "models/*": ["src/models/*"],
      "*": ["node_modules/*"]
    }
  },
  "lib": ["es2015"],
  "include": ["src/**/*"]
}
